---
import Layout from '@/layouts/Layout.astro';
import Badge from '@/components/Badge.astro';
import Card from '@/components/Card.astro';
import LinkedInIcon from '@/components/icons/LinkedIn.astro';
import GitHubIcon from '@/components/icons/GitHub.astro';
import BriefcaseIcon from '@/components/icons/Briefcase.astro';
import EmailIcon from '@/components/icons/Email.astro';
import CodeIcon from '@/components/icons/Code.astro';
import SocialPill from '@/components/SocialPill.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import Experience from '@/components/Experience.astro';
import Projects from '@/components/Projects.astro';
import ProfileIcon from '@/components/icons/Profile.astro';
import AboutMe from '@/components/AboutMe.astro';
---

<Layout
  title="Portafolio de Martin Guette - Desarrollador y Programador Web con 1 año de experiencia"
  description="Contrata a Martin Guette, un desarrollador web con 1 año de experiencia en Santa Marta, Colombia. Especializado en crear aplicaciones únicas."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <img
        class="rounded-full size-12 mb-4"
        src="/avatar.webp"
        alt="Martin Guette photo"
      />
      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy Martin Guette <div class="flex justify-center items-center">
          <a
            class="flex justify-center items-center hover:scale-105 transition"
            href="https://www.linkedin.com/in/martin-guette/"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Badge>Disponible para trabajar</Badge>
          </a>
        </div>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white"
      >
        <span>+1 año de experiencia.</span>
        <span class="text-yellow-800 dark:text-yellow-200">
          Desarrollador Web.
        </span>
        <span class="text-red-800 dark:text-red-200">
          De Santa Marta, Colombia.</span
        >
        <span class="text-sky-800 dark:text-sky-200"
          >Especializado en crear aplicaciones únicas.</span
        >
      </h2>
      <nav class="flex
          gap-4
          mt-8
          flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/martin-guette/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/martinchuck">
          <GitHubIcon class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="mailto:marguepardo@gmail.com">
          <EmailIcon class="size-4 md:size-6" />
          marguepardo@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <BriefcaseIcon class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <ProfileIcon class="size-7" />
        Sobre mí
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
