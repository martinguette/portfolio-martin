---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Card from '../components/Card.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import BriefcaseIcon from '../components/icons/Briefcase.astro';
import EmailIcon from '../components/icons/Email.astro';
import CodeIcon from '../components/icons/Code.astro';
import SocialPill from '../components/icons/SocialPill.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Experience from '../components/Experience.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import Projects from '../components/Projects.astro';
---

<Layout
  title="Portafolio de Martin Guette - Desarrollador y Programador Web con 1 año de experiencia"
  description="Contrata a Martin Guette, un desarrollador web con 1 año de experiencia en Santa Marta, Colombia. Especializado en crear aplicaciones únicas."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <img
        class="rounded-full size-12 mb-4"
        src="../../assets/avatar.webp"
        alt="Martin Guette photo"
      />
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy Martin Guette <div class="flex justify-center items-center">
          <a
            class="flex justify-center items-center"
            href="https://www.linkedin.com/in/martin-guette/"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Badge>Disponible para trabajar</Badge>
          </a>
        </div>
      </h1>
      <h2 class="text-xl lg:text-2xl text-balance max-w-[700px]">
        <span>+1 año de experiencia.</span>
        <span class="text-yellow-200/90"> Desarrollador Web. </span>
        <span class="text-red-200/90"> De Santa Marta, Colombia.</span>
        <span class="text-sky-200"
          >Especializado en crear aplicaciones únicas.</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/martin-guette/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/martinchuck">
          <GitHubIcon class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="mailto:marguepardo@gmail.com">
          <EmailIcon class="size-4 md:size-6" />
          marguepardo@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <BriefcaseIcon class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
